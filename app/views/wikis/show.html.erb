<div class="all-images-btn"> <%= link_to "View All Images", wiki_pic_path(@wiki.pics, @wiki),class: 'btn btn-default' %></div>
<div class="all-videos-btn"> <%= link_to "View All Videos", wiki_clip_path(@wiki.clips, @wiki), class: 'btn btn-default' %></div>
  <div class="wiki-image-top"><%= image_tag(@wiki.image.url(:large))%></div>
  <div class="container wiki-show-body">
    <div class="row col-md-10 wiki-body">
      <div class="wiki-info">
        <%= image_tag(@wiki.user.image.url(:thumb)) %>
        <% if user_is_authorized_for_wiki?(@wiki)%>
        <div class="user-action">
          <button><%= link_to "Edit Log", edit_wiki_path(@wiki)%></button>
          <button><%= link_to "Delete Log", @wiki, method: :delete, data: {confirm: 'Are you sure you want to delete this log?'} %></button>
        </div>
        <% end %>
        <h1 id="show-title"><%= @wiki.title %></h1>
        <h4 class="small-text"><%= @wiki.description %></h4>
        <h4 class="small-text"><%= @wiki.category.name %></h4>
        <h4 class="wiki-user-username"><%= link_to @wiki.user.username, user_path(@wiki.user) %></h4>
      </div>
      <div class="wiki-icons">
        <p class="glyphicon glyphicon-heart"></p>
        <p class="glyphicon glyphicon-comment"></p>
        <p class="glyphicon glyphicon-eye-open"></p>
      </div>
      <div class="wiki-icons-content">
          <span class="wiki-icons-tag"><%= pluralize(@wiki.likes, 'like') %></span>
          <span class="wiki-icons-tag"><%= pluralize(@wiki.comments.count, 'comment') %></span>
          <span class="wiki-icons-tag"><%= pluralize(@wiki.impressionist_count, 'view') %></span>
      </div>
      <div class="side-images">
        <h4 class="side-images-top">Pictures</h4>
        <% if @wiki.pics.empty? %>
        <p>No pictures</p>
        <% else %>
        <% @wiki.pics.take(6).each do |pic| %>
          <div class="row col-sm-6"><%= link_to (image_tag(pic.image.url(:thumb))), pic.image.url(:album), data: {lightbox: "eaxmple-set"}  %></div>
        <% end %>
        <% end %>
      </div>
      <div class="wiki-description">
        <h3>About:</h3>
        <p><%= markdown(@wiki.body) %></p>
      </div>
    <% if current_user %>
    <div class="comment-form-div">
      <h4>New Comment</h4>
      <span><%= render 'comments/form', comment: Comment.new, wiki: @wiki %></span>
    </div>
        <div class="comments-list">
          <h4 class="comment-title"><i class="fa fa-comments fa-lg" aria-hidden="true"></i> Comments (<%= @wiki.comments.count %> comments)</h4>
          <%= render @wiki.comments %>
        </div>
    <% end %>
    <% if user_is_authorized_for_wiki?(@wiki)%>
    <div class="wiki-media row col-md-10">
      <h3><i class="fa fa-picture-o" aria-hidden="true"></i> Add Images</h3>
        <%= render 'pics/form', pic: Pic.new, wiki: @wiki %>
      <h3><i class="fa fa-video-camera" aria-hidden="true"></i> Add Videos</h3>
        <%= render 'clips/form', clip: Clip.new, wiki: @wiki %>
    </div>
    <% end %>
  </div>
</div>
<%= render 'layouts/footer' %>
