<div class="container new-wiki-form">
  <%= form_for @wiki, html: { multipart: true } do |f| %>
     <div class="form-group">
       <%= f.label :title %>
       <%= f.text_field :title, class: 'form-control', placeholder: "Enter Wiki Title"  %>
     </div>
     <div class="form-group">
       <%= f.label :body %>
       <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter Wiki body" %>
     </div>
     <div class="form-group">
       <%= f.label :description %>
       <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter Wiki description" %>
     </div>
     <div class="form-group">
       <%= f.label :image %>
       <%= f.file_field :image %>
     </div>
     <% if current_user && (current_user.admin? ||  current_user.premium?) %>
       <div class="form-group">
         <%= f.label :private %>
         <%= f.check_box :private %>
       </div>
    <% end %>
     <div class="form-group">
       <%= f.submit "Save", class: 'btn btn-primary' %>
     </div>
    <% end %>
  </div>
</div>
