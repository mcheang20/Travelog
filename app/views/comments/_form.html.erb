<%= form_for [wiki, comment] do |f| %>
   <div class="form-group">
     <%= f.label :body, class: 'sr-only' %>
     <%= f.text_area :body, class: 'form-control', rows:"3", placeholder: "Enter a new comment" %>
   </div>
    <%= f.submit "Submit Comment", class: 'btn btn-default pull-right' %>
 <% end %>
