<% provide(:footer_style, "transparent-foot") %>
<nav class="home-nav">
  <ul>
    <span> <%= link_to image_tag("travelog_logo.png"), root_path %></span>
    <li class="pull-right"> <%= link_to "Log In", new_user_session_path, class: 'btn btn-default'  %> </li>
  </ul>
</nav>
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="false">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <img src="https://www.gurupetfood.com/wp-content/themes/guru/images/grass-background.jpg"  data-color="firebrick">
      <div class="carousel-caption">
        <div class="cap-one">
         <h1>Welcome to Travelog</h1>
         <p>Travel, Share, and Explore</p>
         <%= link_to "Sign Up", new_user_registration_path, class: 'btn'  %>
        </div>
     </div>
   </div>
   <div class="item">
      <img src="http://www.moahawaii.org/wp-content/uploads/2013/02/s-nature-bg2-1500x600.jpg">
      <div class="carousel-caption">
        <div class="cap-two">
          <h1>Explore the World</h1>
          <p>Find your next adventure</p>
          <%= link_to "Start Exploring", all_wikis_path, class: 'btn'%>
        </div>
      </div>
    </div>
    <div class="item">
       <img src=" http://itcher.com/mag/wp-content/uploads/2015/10/Egypt-Pyramids-Beautiful-Sunset.jpg">
       <div class="carousel-caption">
         <div class="cap-three">
           <h1>Log Your Adventures</h1>
           <p>A diary for events, vacations, and adventures</p>
           <%= link_to "Learn More", "#", class: 'btn' %>
         </div>
       </div>
     </div>
     <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
       <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
       <span class="sr-only">Previous</span>
     </a>
     <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
       <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
       <span class="sr-only">Next</span>
     </a>
   </div>
</div>
