<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <img src="https://healthintelasia.com/wp-content/uploads/2013/09/asia-1500-X-600-banner.jpg">
      <div class="carousel-caption">
       <h1 class="top">Welcome to Travelog</h1>
       <%= link_to "Join", new_user_registration_path, class: 'btn btn-primary'  %>
       <%= link_to "Log In", new_user_session_path, class: 'btn btn-default' %>
     </div>
   </div>

   <div class="item">
      <img src="http://www.moahawaii.org/wp-content/uploads/2013/02/s-nature-bg2-1500x600.jpg">
      <div class="carousel-caption">
        <h1 class="top">Log Your Adventures</h1>
        <!--<p class="cap">Upload and share your travel photos to the whole world</p> -->
      </div>
    </div>

    <div class="item">
       <img src="http://socahiking.com/wp-content/uploads/2015/01/Soca-valley-Čezsoča-1500x600.jpg">
       <div class="carousel-caption">
         <h1 class="top">Explore the World</h1>
       </div>
     </div>

     <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
       <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
       <span class="sr-only">Previous</span>
     </a>
     <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
       <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
       <span class="sr-only">Next</span>
     </a>
   </div>
</div>

<div class="info-one">
<h1> A whole different way of sharing </h1>
  <p>Went on an awesome adventure? Share your photos and experience with the whole world.</p>
  <% if user_signed_in?%>
    <%= link_to "Share", new_wiki_path , class: 'btn btn-primary'%>
  <% else %>
    <%= link_to "Get Started", new_user_registration_path, class: 'btn btn-primary' %>
  <% end %>
  <img src="http://www.e-zone.com.hk//channelnews/20160418200628.jpg">
</div>
<div class="info-two">
  <h1>Discover new places</h1>
    <p>Explore the world like you've never seen it before</p>
    <%= link_to "Discover", wikis_path, class: 'btn btn-primary'  %>
    <img src="https://images.trvl-media.com/media/content/expus/graphics/launch/home/tvly/150324_flights-hero-image_1330x742.jpg">
  </div>
  <div class="how-info">
    <h1 class="how-title">How It Works</h1>
      <div class="border-style"></div>
    <div class="info-row">
      <article class="info-group">
        <p class="how-img glyphicon glyphicon-camera"></p>
        <p class="how-text">Record</p>
        <p class="how-desc">Bacon ipsum dolor amet filet mignon meatball spare ribs fatback bacon shankle. fatback bacon shankle.<p>
      </article>
      <article class="info-group">
        <p class="how-img glyphicon glyphicon-cloud-upload"></p>
        <p class="how-text">Share</p>
        <p class="how-desc">Bacon ipsum dolor amet filet mignon meatball spare ribs fatback bacon shankle. dffggdfgsdfgsdfgsdfgdsfg.<p>
      </article>
      <article class="info-group">
        <p class="how img glyphicon glyphicon-thumbs-up"></p>
        <p class="how-text">Interact</p>
        <p class="how-desc">Bacon ipsum dolor amet filet mignon meatball spare ribs fatback bacon shankle.<p>
      </article>
    </div>
  </div>
  <div class="recent-log-container">
    <p class="container recent-log-heading">Check out recent logs <%= link_to "See More", all_wikis_path %></p>
      <div class="logs-recent">
      <% recent.take(3).each do |wiki| %>
        <div class="logs-all">
          <%= link_to image_tag(wiki.image.url(:medium)), wiki_path(wiki) %>
          <p>
            <%= wiki.title %>
          </p>
        </div>
    <% end %>
  </div>
</div>
