<div class="pic-show">
  <% if @wiki.pics.empty? %>
   <p> No Images Posted<p>
  <% else %>
    <% @wiki.pics.each do |pic| %>
      <div class="col-sm-3">
        <%=link_to (image_tag (pic.image.url(:album))), pic.image.url(:album), data: {lightbox: "eaxmple-set", title: pic.caption }%>
        <div class="pic-delete">
          <%= link_to "Delete", [pic.wiki, pic], method: :delete, class: 'btn btn-danger' %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
